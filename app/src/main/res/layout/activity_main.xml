<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/winBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="WIN"
        app:layout_constraintBottom_toTopOf="@+id/chpokBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chpokBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="CHPOK"
        app:layout_constraintBottom_toTopOf="@+id/tadaBTN"
        app:layout_constraintEnd_toEndOf="@+id/winBTN"
        app:layout_constraintStart_toStartOf="@+id/winBTN"
        app:layout_constraintTop_toBottomOf="@+id/winBTN" />

    <Button
        android:id="@+id/tadaBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TADA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chpokBTN"
        app:layout_constraintStart_toStartOf="@+id/chpokBTN"
        app:layout_constraintTop_toBottomOf="@+id/chpokBTN" />

</androidx.constraintlayout.widget.ConstraintLayout>